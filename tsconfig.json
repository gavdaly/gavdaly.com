{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2017"
        ],
        // "allowJs": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@src": [
                "src/*"
            ],
            "@components": [
                "src/components/*"
            ],
            "@icons": [
                "src/icons/*"
            ],
            "@styles": [
                "src/styles/*"
            ],
            "utils": [
                "src/utils"
            ],
            "@types": [
                "src/types/*"
            ],
            "@layouts": [
                "src/layouts/*"
            ],
            "@pages": [
                "src/pages/*"
            ],
            "@templates": [
                "src/templates/*"
            ],
            "@posts": [
                "content/posts/*"
            ],
            "@lib": [
                "lib/*"
            ],
            "@models": [
                "models/*"
            ],
            "@plugins": [
                "plugins/*"
            ],
            "@routes": [
                "routes/*"
            ],
            "@services": [
                "services/*"
            ],
            "@api": [
                "api/index"
            ]
        }
    }
}